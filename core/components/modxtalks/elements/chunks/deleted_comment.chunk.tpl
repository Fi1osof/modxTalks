<div class="mtComment" data-index="[[+index]]" data-idx="[[+idx]]">
    [[+timeMarker]]
    <div class="post hasControls deleted" id="comment-[[+id]]" data-id="[[+id]]">
        <div class="postContent thing">
            <div class="postHeader">
                <div class="info">
                    <h3>[[+name]]</h3>
                    <a href="[[+link]]" class="time" title="[[+timeago]]">[[+funny_date]]</a>
                </div>
                <div class="controls">
                    <span><span title="[[+delete_date]]">[[+funny_delete_date]]</span> [[+deleted_by]] [[+deleteUser]]</span>
                    <a href="[[+link_restore]]" title="[[+restore]]" class="control-restore">[[+restore]]</a>
                </div>
            </div>
        </div>
    </div>
</div>